
def reverse(string)
  # word = "hi i am sabina"
  new_word = ""
  # puts "#{word}"
  string_length = string.length
  # puts "#{word_length}"
  while string_length > 0
    string_length -= 1
    new_word << string[string_length]
  end

  puts new_word
end

puts reverse("no need to worry")

